<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    tools:context=".activity.VideoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ac_music_control"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="160px"
                android:layout_marginTop="68px"
                android:src="@drawable/media_music_iv" />

            <com.jancar.media.view.CircleImageView
                android:id="@+id/ac_music_iv_image"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="223px"
                android:layout_marginTop="125px"
                android:src="@drawable/media_music" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/media_music_single" />

                <com.jancar.media.view.MarqueeTextView
                    android:id="@+id/ac_music_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="我的滑板鞋"
                    android:textColor="#FFF"
                    android:textSize="34px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/media_music_album" />

                <com.jancar.media.view.MarqueeTextView
                    android:id="@+id/ac_music_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/no_album"
                    android:textColor="#FFF"
                    android:textSize="34px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/media_music_singer" />

                <com.jancar.media.view.MarqueeTextView
                    android:id="@+id/ac_music_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/no_artist"
                    android:textColor="#FFF"
                    android:textSize="34px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ac_music_control"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_alignParentBottom="true"
        android:background="#B5343536"
        android:padding="8dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/rl_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_music_currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="22px" />

            <SeekBar
                android:id="@+id/ac_music_seekBar"
                android:layout_width="870px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/media_seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/media_seekbar_thumb"
                android:thumbOffset="5px" />

            <TextView
                android:id="@+id/ac_music_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="22px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_01"
            android:gravity="center">

            <ImageView
                android:id="@+id/ac_music_play_fore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:src="@drawable/media_fore" />

            <ImageView
                android:id="@+id/ac_music_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:src="@drawable/media_play" />

            <ImageView
                android:id="@+id/ac_music_play_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:src="@drawable/media_next" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ac_music_left_menu"
            android:layout_width="75px"
            android:layout_height="75px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/media_video_list" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ac_music_left_layout"
        android:layout_width="397px"
        android:layout_height="406px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="135px"
        android:layout_marginRight="-394px"
        android:orientation="vertical"
        android:paddingLeft="4px">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EA212121" />

        <com.jancar.media.view.FlyTabView
            android:id="@+id/ac_music_tabview"
            android:layout_width="match_parent"
            android:layout_height="52px"
            android:layout_alignParentTop="true"
            android:background="@drawable/media_list_header" />

        <FrameLayout
            android:id="@+id/ac_replace_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ac_music_tabview" />
    </RelativeLayout>


</RelativeLayout>