<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64px"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv01"
        android:layout_width="0dp"
        android:layout_height="64px"
        android:layout_weight="0.15"
        android:duplicateParentState="true"
        android:src="@drawable/media_default_image" />


    <com.jancar.media.view.MarqueeTextView
        android:id="@+id/item_tv01"
        android:layout_width="0dp"
        android:layout_height="64px"
        android:layout_weight="0.7"
        android:duplicateParentState="true"
        android:gravity="left|center"
        android:singleLine="true"
        android:textColor="@drawable/textcolor_blue_white"
        android:textSize="24px" />


    <ImageView
        android:id="@+id/item_iv02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:duplicateParentState="true"
        android:src="@drawable/media_down_01" />

</LinearLayout>